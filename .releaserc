{
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {
            "scope": "no-release",
            "release": false
          },
          {
            "scope": "breaking",
            "release": "major"
          },
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "revert",
            "release": "patch"
          },
          {
            "type": "move",
            "release": false
          },
          {
            "type": "remove",
            "release": false
          },
          {
            "type": "chore",
            "release": false
          },
          {
            "type": "ci",
            "release": false
          },
          {
            "type": "test",
            "release": false
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "âœ¨ Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "ğŸ› Bug Fixes",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "ğŸŒˆ Performance",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "â™»ï¸ Refactor",
              "hidden": false
            },
            {
              "type": "chore",
              "section": "ğŸ§¹ Chore",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "ğŸ“ Docs",
              "hidden": false
            },
            {
              "type": "style",
              "section": "ğŸ’„ Styles",
              "hidden": false
            },
            {
              "type": "revert",
              "section": "ğŸ• Reverts",
              "hidden": false
            },
            {
              "type": "ci",
              "section": "ğŸ’« CI/CD",
              "hidden": false
            },
            {
              "type": "test",
              "section": "âœ… Tests",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "ğŸ“¦ Chores",
              "hidden": true
            },
            {
              "type": "move",
              "section": "ğŸšš Move Files",
              "hidden": true
            },
            {
              "type": "remove",
              "section": "ğŸ”¥ Remove Files",
              "hidden": true
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# ğŸš¦ CHANGELOG"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  ]
}
