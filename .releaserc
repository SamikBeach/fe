{
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          {
            "scope": "no-release",
            "release": false
          },
          {
            "scope": "breaking",
            "release": "major"
          },
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          },
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "revert",
            "release": "patch"
          },
          {
            "type": "move",
            "release": false
          },
          {
            "type": "remove",
            "release": false
          },
          {
            "type": "chore",
            "release": false
          },
          {
            "type": "ci",
            "release": false
          },
          {
            "type": "test",
            "release": false
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventional-changelog-conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features",
              "hidden": false
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes",
              "hidden": false
            },
            {
              "type": "perf",
              "section": "üåà Performance",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "‚ôªÔ∏è Refactor",
              "hidden": false
            },
            {
              "type": "chore",
              "section": "üßπ Chore",
              "hidden": false
            },
            {
              "type": "docs",
              "section": "üìù Docs",
              "hidden": false
            },
            {
              "type": "style",
              "section": "üíÑ Styles",
              "hidden": false
            },
            {
              "type": "revert",
              "section": "üïê Reverts",
              "hidden": false
            },
            {
              "type": "ci",
              "section": "üí´ CI/CD",
              "hidden": false
            },
            {
              "type": "test",
              "section": "‚úÖ Tests",
              "hidden": true
            },
            {
              "type": "chore",
              "section": "üì¶ Chores",
              "hidden": true
            },
            {
              "type": "move",
              "section": "üöö Move Files",
              "hidden": true
            },
            {
              "type": "remove",
              "section": "üî• Remove Files",
              "hidden": true
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# üö¶ CHANGELOG"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  ]
}
